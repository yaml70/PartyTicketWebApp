@model partywebapp.Models.HomePage

@{
    ViewData["Title"] = "Index";
    Layout = "_HomeLayout";
}

<head>
    <link rel="stylesheet" href="~/css/HomePage.css" />
</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">
    <div id="portfolio" class="jumbotron text-center" data-target=".navbar">
        <h1>WELCOME</h1>
        <p>Time to celebrate</p>     
    </div>
    <div id="portfolio" class="container-fluid text-center">
        <h1>New Paties</h1>
        @foreach (var item in Model.parties)
        {
            <div class="container-fluid col-sm-4">
                <div class="a-box">
                    <div class="img-container">
                        <div class="img-inner">
                            <div class="inner-skew">
                                <img src="@Html.DisplayFor( modelItem => item.partyImage.imageUrl)">
                            </div>
                        </div>
                    </div>
                    <div class="text-container color2">
                        <h3>
                            @item.name
                        </h3>
                        <h5>
                            @item.eventDate.Year / @item.eventDate.Month / @item.eventDate.Day
                        </h5>
                        <h5>
                            @item.genre
                        </h5>
                        <a asp-action="Details" asp-route-id="@item.Id">More Details</a> |
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="portfolio" class="container-fluid text-center">
        <h1>Top Performers</h1>
        @foreach (var item in Model.performers)
        {
            <div class="container-fluid col-sm-4">
                <div class="a-box">
                    <div class="img-container">
                        <div class="img-inner">
                            <div class="inner-skew">
                                <img src="@Html.DisplayFor( modelItem => item.SpotifyId)">
                            </div>
                        </div>
                    </div>
                    <div class="text-container color2">
                        <h3>
                            @item.SpotifyId
                        </h3>
                        <h5>
                            @item.SpotifyId
                        </h5>
                        <h5>
                            @item.SpotifyId
                        </h5>
                        <a asp-action="Details" asp-route-id="@item.Id">More Details</a> |
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="portfolio" class="container-fluid text-center">
        <h1>Best Clubs</h1>
        @foreach (var item in Model.clubs)
        {
            <div class="container-fluid col-sm-4">
                <div class="a-box">
                    <div class="img-container">
                        <div class="img-inner">
                            <div class="inner-skew">
                                <img src="@Html.DisplayFor( modelItem => item.Parties[0].partyImage.imageUrl)">
                            </div>
                        </div>
                    </div>
                    <div class="text-container color2">
                        <h3>
                            @item.Name
                        </h3>
                        <h5>
                            @item.LocationId
                        </h5>
                        <h5>
                            @item.Name
                        </h5>
                        <a asp-action="Details" asp-route-id="@item.Id">More Details</a> |
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="services" class="container-fluid text-center">
        <h2>SERVICES</h2>
        <h1>What we offer</h1>
        <br>
        <div class="row slideanim">
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-off logo"></span>
                <h1>FUN</h1>
                <p>Lorem ipsum dolor sit amet..</p>
            </div>
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-heart logo"></span>
                <h1>EASY</h1>
                <p>Lorem ipsum dolor sit amet..</p>
            </div>
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-leaf logo"></span>
                <h1>SAVE MONEY</h1>
                <p>Lorem ipsum dolor sit amet..</p>
            </div>
        </div>
    </div>
    <div id="about" class="container-fluid bg-grey">
        <div class="row">
            <div class="col-sm-8">
                <h2>About Company Page</h2><br>
