@model partywebapp.Models.User

@{
    ViewData["Title"] = "Delete";
}
<head>
    <style>
        import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap");
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #EE8FA6;
            background: -webkit-linear-gradient(45deg, #3C88CF, #EE8FA6, #FBE9DE);
            background: linear-gradient(45deg, #3C88CF, #EE8FA6, #FBE9DE);
            font-family: 'Roboto', sans-serif;
        }

        h4, h5 {
            color: black;
        }

        .screen {
            height: 65vh;
            min-width: 360px;
            background-color: #FFFFFF;
            border-radius: 20px;
            padding: 18px;
            overflow: hidden;
        }

        .screen__userdp {
            width: 120px;
            height: 120px;
            background: #EE8FA6;
            margin: 0 auto;
            border-radius: 14px;
            margin-bottom: 12px;
            background-image: url("https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png");
            background-size: cover;
            background-repeat: no-repeat;
            background-position: right;
        }

        .screen__username {
            text-align: center;
            font-size: 1.5rem;
        }

        .screen__usertag {
            text-align: center;
            font-size: 0.875rem;
            color: #B1B1B1;
        }

        .screen__cta {
            width: 100%;
            display: flex;
            justify-content: space-between;
        }

        .screen__cta__btn {
            height: 40px;
            width: 48.5%;
            border-radius: 8px;
            background-color: #E6E6E6;
            color: #000000;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1rem;
            font-weight: 700;
            margin-top: 12px;
        }

            .screen__cta__btn:hover {
                cursor: pointer;
                background: #EE8FA6;
                background: -webkit-linear-gradient(45deg, #3C88CF, #EE8FA6);
                background: linear-gradient(45deg, #3C88CF, #EE8FA6);
                color: #FFFFFF;
            }

        .screen__hr {
            height: 1px;
            width: 100%;
            background-color: #E6E6E6;
            margin: 0.875rem 0;
        }

        li {
            display: flex;
            align-items: center;
            list-style: none;
            margin-bottom: 1.5rem;
        }

        .screen__list__img {
            height: 40px;
            width: 40px;
            background-color: #E6E6E6;
            border-radius: 8px;
        }

        .screen__list__details {
            margin-left: 0.875rem;
        }

            .screen__list__details h5 {
                color: #B1B1B1;
                font-weight: 400;
            }

        .screen__list__img img {
            border-radius: 6px;
            height: 40px;
            width: 40px;
        }
    </style>
</head>

<body>
    <div class="screen">
        <div class="screen__userdp"></div>
        <div class="screen__username">
            <div>Are you sure you want to delete <h3>@Model.firstName @Model.lastName</h3>Profile?</div>
        </div>
        <div class="screen__usertag">
            <p>@Model.email</p>
            <h4>@Model.Type</h4>
            @if (Model.Type == UserType.producer)
            {
            <h5 style="text-align: center;">Number Of Parties Create: @Model.parties.Count</h5>
            }
        </div>
        <form asp-action="Delete" class="item col-md-12">
            <p></p>
            <p></p>
            <p></p>
            <button class="col-md-3">
                <a asp-action="Index">No, Please back</a>
            </button>
            <p class="col-md-6"></p>
            <input type="hidden" asp-for="Id" />
            <button type="submit" value="Yes! Please Delete" class="col-md-3 btn-danger">Yes! Please Delete</button>
        </form>
    </div>
</body>
